<header>
  <div class="header-content">
    {{#if currentUser}}
      <p class="welcome-message">Bienvenido, {{currentUser.first_name}}!</p>
      <a href="/carts/{{currentUser.cart}}" class="btn cart-btn">
        <i class="fas fa-shopping-cart"></i>
        Ver Carrito
      </a>
      <a href="/logout" class="btn logout-btn">Cerrar Sesión</a>
    {{else}}
      <a href="/login" class="btn login-btn">Iniciar Sesión</a>
      <a href="/register" class="btn register-btn">Registrarse</a>
    {{/if}}
  </div>
</header>
<h1>Lista de Productos</h1>
<div id="product-list">
  {{#each products}}
    <div class="product">
      <h2>{{this.title}}</h2>
      <p>{{this.description}}</p>
      <p class="price">Precio: ${{this.price}}</p>
      <p>Categoría: {{this.category}}</p>
      <div class="product-actions">
        <a href="/products/{{this._id}}" class="details-btn">Ver Detalles</a>
        <button
          class="add-to-cart-btn"
          onclick="addToCart('{{this._id}}')"
        >Agregar al Carrito</button>
      </div>
    </div>
  {{/each}}
</div>

<div class="pagination">
  {{#if hasPrevPage}}
    <a href="{{prevLink}}">Anterior</a>
  {{/if}}
  {{#if hasNextPage}}
    <a href="{{nextLink}}">Siguiente</a>
  {{/if}}
</div>

<script src="/js/addToCart.js"></script>